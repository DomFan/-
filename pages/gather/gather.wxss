/* pages/gather/gather.wxss */
page, .wrap{
  width: 100%;
  height: 100.5%;
}
page, form, view{
  box-sizing: border-box;
}
.form{
  width: 100%;
  height: 30%;
  font-size: 35rpx;
  padding-top: 50rpx;
}

.typeright{
  width: 70%;
  /* display: flex; */
  position: relative;
}
.text{
  /* float: left; */
  height: 50rpx;
  line-height: 50rpx;
}
.startwrap, .endwrap, .btnwrap{
  width: 100%;
}

.startwrap, .endwrap{
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 25rpx; 
  margin-bottom: 25rpx;
  display: flex;
  padding-left: 50rpx; 
  border-bottom: 1rpx solid #f1f1f1;
}
picker{
  width: 100%;
}
.btnwrap{
  margin-top: 50rpx;
  display: flex;
}
.confirm{
  background-color: #f55d54;
  color: #fff;
  font-size: 36rpx;
}
.btn{
  width: 40%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
}

.table{
  width: 100%;
  height: 70%;
  margin-top: 50rpx;
  font-size: 21rpx;
}
/* 表格css  */
.table {
  width: 100%;
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  height: 3rem;
  justify-content: center;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}

.nocontent{
  padding-top: 50rpx;
  display: flex;
  justify-content: center;
  /* align-items: center; */
  font-size: 25rpx;
  color: #ccc
}

.thead{
  width: 100%;
  height: 3rem;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: blue; 
}
.thitem{
  width: 100%; 
  text-align: center;
  line-height: 3rem;
  background: #ccc;
  color: #fff;
  display: flex; 
  height: 3rem;
  justify-content: center;
}
.more{
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  text-align: center;
}
.typeleft, .text, .item, .picker{
  height: 40rpx;
  line-height: 40rpx;
}
.top{
  position: fixed;
  top: 0;
}
.notop{
  position: relative;
}