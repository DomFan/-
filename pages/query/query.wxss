.typeright{
  width: 70%;
  /* display: flex; */
  position: relative;
}
.text{
  float: left;
  height: 50rpx;
  line-height: 50rpx;
}
.arrow{
  float: right;
  position: relative;
  right: 0rpx;
  top: 12rpx;
  width: 24rpx;
  height: 24rpx;
}
.arrow-down{
  transition: transform .4s;
  transform: rotate(90deg)
}
.arrow-up{
  transition: transform .4s;
  transform: rotate(-90deg)
}




.listwrap{
  background-color: #fff;
  width: 100%;
}
.list{
  padding-left: 215rpx;
  width: 70%;
  display: flex;
  justify-content: space-between;
}



.startwrap, .endwrap{
  margin-top: 25rpx; 
  margin-bottom: 25rpx;
  display: flex;
  padding-left: 50rpx; 
  border-bottom: 1rpx solid #f1f1f1;
}
.btnwrap{
  margin-top: 50rpx;
