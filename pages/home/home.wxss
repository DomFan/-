/* pages/home/home.wxss */
page{
  width: 100%;
  height: 100%;
}

.head{
  margin-bottom: 50rpx;
  overflow: hidden;
  width: 100%;
}
.avatar, .username{
  float: left;
}
/* 头像  */
.avatar{
  margin-left: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid #909090;
  border-radius: 50%;
}
.username{
  margin-left: 50rpx;
  height: 100rpx;
  line-height: 100rpx; 
}

.wrap{
  /* overflow: hidden; */
}
.box{
  margin-right: -1rpx;
  margin-bottom: -1rpx;
  width: 32.96%; 
  height: 200rpx; 
  background: #f0f0f0;
  border: 1rpx black solid;
  float: left;
  text-align: center;
  line-height: 200rpx;
}

.footer{
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #a0a0a0;
}
.home, .user{
  float: left;
  width: 49%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.home{
  border-right: 1rpx solid #909090;
}