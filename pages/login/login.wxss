/* pages/login/login.wxss */
page {
  width: 100%;
  height: 100%;
}
.container {}

.titletxt {
  font-size: 50rpx;
  color: #000;
}
.form {
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #fff;
  width: 84%;
  height: 84%;
}
.phcolor{
  color: #b3b3b3;
}
.inputWrap{
  position: relative;
  overflow: hidden;
  border: 1rpx #f5f5f5 solid;
  border-radius: 20rpx;
  margin-bottom: 88rpx;
}
.inputWrap input {
  height: 110rpx;
  line-height: 110rpx;
  width: 100%;
}
.accountWrap, .passwordWrap{
  position: relative
}
.account, .password {
  padding-left: 100rpx;
}
.account{
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;  
}
.userIcon, .pswdIcon{
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

.items {
  line-height: 80rpx;
}
.wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.wrap label {
  margin-right: 10rpx;
  font-size: 30rpx;
}

.loginbtn {
  background-color: #f55d54;
  color: #fff;
}
