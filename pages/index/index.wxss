@import '../teml/teml.wxss';
page {
  /* overflow: hidden; */
  width: 100%;
  height: 100%;
  background-color: #fff;
  font-size: 30rpx;
  /* 字体使用 苹方-简 常规体  */
  font-family: PingFangSC-Regular, sans-serif;
}
form{
  width: 100%;
  overflow: hidden;  
}
page, form, view{
  box-sizing: border-box;
}

/*提交按钮  */
.confirmAdd{
  background-color: #f55d54;
  color: #fff;
  border-radius: 0;
}
.title{
  font-size: 28rpx;
  background-color: #f8f8f8;
  padding-left: 28rpx;
  color: #9e9e9e;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1rpx #f1f1f1 solid;
  border-bottom: 1rpx #f1f1f1 solid;
  /* border-bottom: 1rpx #f5f5f5 solid; */
}
.phcolor{
  color: #cecece;
}
.row-container{
  /* overflow: hidden;  */
  height: 100rpx; 
  line-height: 100rpx;
  border-bottom: 1rpx #f1f1f1 solid;
  margin-left: 45rpx;
}

.nounderline{
   border-bottom: 0; 
}
.msgleft {
  float: left;
  height: 100rpx;
}
.row-container input, .row-container picker{
  float: right;
  width: 63%;
  height: 100rpx; 
}
/* .row-container view{
  float: right;
  width: 80%;
  height: 100rpx;
} */
.picker{
  width: 100%;
}
.percent{
  position: relative;
   right: -520rpx; 
}
.rate{
  padding-left: 20rpx;
}
.row-container button{
  font-size: 28rpx;
  color: #9a9a9a;
  float: right;
  width: 140rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-top: 22rpx;
  margin-right: 35rpx;
  border-radius: 4rpx;
  background-color: #fff;
}
.row-container .btnright{
  margin-right: 50rpx;
}
.space{
  height: 100rpx;
  border-top: 1rpx #f1f1f1 solid;
}
.bottom{
  height: 200rpx;
}

.trade-container{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx #f1f1f1 solid;
  margin-left: 45rpx;
}
.trade-container input{
  width: 63%;
  height: 100rpx;
  float: right;
}
.trade-container view{
  width: 63%;
  height: 100rpx;
  float: right;
  position: relative;
}
.checkWX{
  padding-left: 80rpx;
  padding-right: 50rpx;
}
.text{
  width: 100%;
  position: absolute;
  left: 0;
}
