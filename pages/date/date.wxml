<!--pages/date/date.wxml-->
<view>
  <view>{{year}}年{{month}}月{{day}}日</view>
  <picker-view indicator-style="height: 35px;" style="width: 100%; height: 100px;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{years}}" wx:key='{{index}}' style="line-height: 30px">{{item}}年</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" wx:key='{{index}}' style="line-height: 30px">{{item}}月</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{days}}" wx:key='{{index}}' style="line-height: 30px">{{item}}日</view>
    </picker-view-column>
  </picker-view>
</view>